{
  "manifest_version": 3,
  "name": "Biirbal Link Saver",
  "version": "1.0.0",
  "description": "Save any webpage to your Biirbal team for AI-powered audio summaries",
  "permissions": [
    "activeTab",
    "storage",
    "cookies"
  ],
  "host_permissions": [
    "https://biirbal.ai/*",
    "https://*.biirbal.ai/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Save to Biirbal",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}